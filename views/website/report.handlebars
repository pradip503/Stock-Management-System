
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<i class="glyphicon glyphicon-check"></i> Order Report
			</div>
			<!-- /panel-heading -->
			<div class="panel-body">

				<form class="form-horizontal" action="/api/generateReport" method="post" id="getOrderReportForm">

					<div class="row">
						<div class="col-lg-4">
							<div class="form-group">
								<label for="startDate" class="col-sm-4 control-label">Start Date :</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="startDate" name="startDate"
										placeholder="Start Date" />
								</div>
							</div>
						</div>
						<div class="col-lg-4">
							<div class="form-group">
								<label for="endDate" class="col-sm-4 control-label">End Date :</label>
								<div class="col-sm-8">
									<input type="text" class="form-control" id="endDate" name="endDate"
										placeholder="End Date" />
								</div>
							</div>
						</div>
						<div class="col-lg-2">
							<div class="form-group">
								<div class="col-sm-offset-2 col-sm-10">
									<button type="submit" class="btn btn-success" id="generateReportBtn"> <i
											class="glyphicon glyphicon-ok-sign"></i> Generate Report</button>
								</div>
							</div>
						</div>
					</div>
				</form>

			</div>
			<!-- /panel-body -->
		</div>
	</div>
	<!-- /col-dm-12 -->
</div>
<!-- /row -->





